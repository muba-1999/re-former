    <%= form.label :username, "Username" %>
    <%= form.text_field :username, placeholder: "John" %>

    <%= form.label :password, "Password" %>
    <%= form.text_field :password, placeholder: "name@example.com" %>

    <%= form.label :password, "Password" %>
    <%= form.password_field :password %>

    <%= form.submit "Create" %>
<% end %>
